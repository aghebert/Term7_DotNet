                tempNum = Convert.ToDouble(txtLCD.Text);
                total = tempNum2 / tempNum;
                txtLCD.Text = Convert.ToString(total);
                break;
            case " x ":
                tempNum = Convert.ToDouble(txtLCD.Text);
                total = tempNum2 * tempNum;
                txtLCD.Text = Convert.ToString(total);
                break;
            default:
                txtLCD.Text = "Unrecognized operation. Please Choose a correct option.";
                break;
        }

